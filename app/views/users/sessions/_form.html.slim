= form_for(resource, as: resource_name, url: session_path(resource_name)) do |form| 
  h1.form-title Login

  = render 'input', 
    f: form, 
    type: 'email'

  = render 'input', 
    f: form, 
    type: 'password'

  = render 'remember_me', 
    f: form

  = form.submit 'Login', 
    class: 'form-btn'

  = link_to 'Forgot your password?', 
    new_password_path(resource_name), 
    class: 'auth-links'
  br

  = link_to 'Sign up', 
    new_registration_path(resource_name), 
    class: 'auth-links'
